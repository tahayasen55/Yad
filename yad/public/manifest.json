{
    "manifest_version": 3,
    "name": "Yad",
    "version": "1.0",
    "description": "An Islamic Chrome extension for daily supplications.",
    "action": {
      "default_popup": "index.html",
      "default_icon": "./icons/icon.png"
    },
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "alarms",
      "notifications",
      "system.display"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "./icons/icon16.png",
      "64": "./icons/icon64.png",
      "128": "./icons/icon128.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  